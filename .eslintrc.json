{
    "env": {
        "node": true,
        "es2021": true
    },
    "extends": ["eslint:recommended", "plugin:node/recommended"],
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "rules": {
        "indent": ["error", 2],
        "linebreak-style": 0,
        "no-useless-catch": 0,
        "no-mixed-spaces-and-tabs": 0,
        "quotes": ["error", "single"],
        "semi": ["error", "always"]
    }
}
